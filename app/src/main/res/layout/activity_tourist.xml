<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:gravity="center"
        tools:context="com.example.user.myapplication.TouristActivity"
     >
    <Button
        android:id="@+id/type1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/selector_btn_click"
        android:text="Crime"
        android:background="#FFFFFFFF"
        />

    <Button
        android:id="@+id/type2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/selector_btn2_click"
        android:drawablePadding="5dp"
        android:text="Traffic"
        android:background="#FFFFFFFF"
        android:layout_marginLeft="20dp"

        />

    <Button
        android:id="@+id/type3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/selector_btn3_click"
        android:drawablePadding="5dp"
        android:text="Restaurant"
        android:background="#FFFFFFFF"
        android:layout_marginLeft="20dp"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
    <Button
        android:id="@+id/type4Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/selector_btn4_click"
        android:drawablePadding="5dp"
        android:text="Emergency"
        android:background="#FFFFFFFF"

       />

    <Button
        android:id="@+id/type5Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/selector_btn5_click"
        android:drawablePadding="5dp"
        android:text="etc"
        android:background="#FFFFFFFF"
        android:layout_marginLeft="20dp"
     />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

    <EditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="edittext" />
    <Button
        android:id="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:background="@color/colorPrimaryDark"
        android:text="send" />

</LinearLayout>

</LinearLayout>